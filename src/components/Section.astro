---
interface Props {
  name: string;
}

const { name } = Astro.props;
---

<li
  class="section-item section-nav-item relative w-full overflow-hidden rounded-lg p-2"
>
  <h3 class="font-bold text-2xl tracking-wide">{name}</h3>
</li>

<style>
  :global(.light-mode) {
    .section-item {
      color: var(--primary-900);
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }
  }

  :global(.dark-mode) {
    .section-item {
      color: var(--primary-100);
      text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
  }
</style>
