---
import Button from "./Buttons/Button.astro";
import type { MenuPage } from "@/types/menu";

const { menu, baseUrl } = Astro.props;
---

<main class="h-screen flex flex-col gap-4 justify-center">
  <div class="mt-[-2rem]">
    <header class="p-4 w-full">
      <h1 class="text-2xl font-bold text-center">{menu?.name || "Menu"}</h1>
    </header>
    <nav class="flex flex-col gap-4 mb-4 text-center">
      {
        menu.pages.map((page: MenuPage) => (
          <Button href={`${baseUrl}/${page.id}`} transition:name={page.id}>{page.name}</Button>
        ))
      }
    </nav>
  </div>
</main>
