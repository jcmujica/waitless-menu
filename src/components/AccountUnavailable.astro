---
import type { AccountSettings, AccountAccessLevel } from "@/types/menu";

interface Props {
  accountSettings?: AccountSettings;
  theme?: "light" | "dark";
  level?: AccountAccessLevel;
  message?: string;
}

const { 
  accountSettings, 
  level = "inactive",
  message = "This menu is currently unavailable"
} = Astro.props;

const logoUrl = accountSettings?.logo_url;
const accountName = accountSettings?.name;

// Different messages based on access level
const getDisplayMessage = () => {
  switch (level) {
    case 'not_found':
      return {
        title: 'Menu Not Found',
        subtitle: message || "The menu you're looking for doesn't exist or may have been moved.",
        icon: 'search'
      }
    case 'suspended':
      return {
        title: 'Menu Temporarily Unavailable',
        subtitle: 'This menu is temporarily unavailable. Please check back later.',
        icon: 'pause'
      }
    case 'expired':
      return {
        title: 'Menu Unavailable',
        subtitle: 'This menu is currently not available. The business may be updating their subscription.',
        icon: 'clock'
      }
    case 'inactive':
    default:
      return {
        title: 'Menu Unavailable',
        subtitle: message || 'This menu is currently not available.',
        icon: 'info'
      }
  }
}

const displayInfo = getDisplayMessage();
---

<div class="unavailable-container">
  <!-- Animated gradient background -->
  <div class="background-gradient"></div>
  
  <!-- Dot pattern overlay -->
  <div class="background-pattern"></div>
  
  <!-- Glow effect -->
  <div class="glow-effect"></div>
  
  <!-- Content -->
  <div class="content">
    <!-- Logo or Icon -->
    <div class="logo-section">
      {logoUrl ? (
        <div class="logo-wrapper">
          <img 
            src={logoUrl} 
            alt={accountName || "Restaurant"}
            class="logo"
          />
        </div>
      ) : (
        <div class="icon-container">
          {displayInfo.icon === 'search' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon">
              <circle cx="11" cy="11" r="8"/>
              <path d="M21 21l-4.35-4.35"/>
            </svg>
          )}
          {displayInfo.icon === 'pause' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon">
              <circle cx="12" cy="12" r="10"/>
              <line x1="10" y1="15" x2="10" y2="9"/>
              <line x1="14" y1="15" x2="14" y2="9"/>
            </svg>
          )}
          {displayInfo.icon === 'clock' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
          )}
          {displayInfo.icon === 'info' && (
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="16" x2="12" y2="12"/>
              <line x1="12" y1="8" x2="12.01" y2="8"/>
            </svg>
          )}
        </div>
      )}
    </div>

    <!-- Restaurant Name (if available) -->
    {accountName && (
      <h2 class="restaurant-name">{accountName}</h2>
    )}

    <!-- Message -->
    <div class="message-section">
      <h1 class="title">{displayInfo.title}</h1>
      <p class="subtitle">{displayInfo.subtitle}</p>
    </div>

    <!-- Contact Info (if available) -->
    {(accountSettings?.contact_email || accountSettings?.contact_phone) && (
      <div class="contact-section">
        <p class="contact-label">For inquiries, please contact:</p>
        {accountSettings.contact_phone && (
          <a href={`tel:${accountSettings.contact_phone}`} class="contact-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="contact-icon">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            {accountSettings.contact_phone}
          </a>
        )}
        {accountSettings.contact_email && (
          <a href={`mailto:${accountSettings.contact_email}`} class="contact-link">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="contact-icon">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            {accountSettings.contact_email}
          </a>
        )}
      </div>
    )}

    <!-- Footer -->
    <div class="footer">
      <p class="powered-by">
        Powered by <a href="https://waitless.tech" target="_blank" rel="noopener noreferrer">Waitless</a>
      </p>
    </div>
  </div>
</div>

<style>
  .unavailable-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 24px;
    position: relative;
    overflow: hidden;
    background: var(--neutral-950);
    color: var(--neutral-100);
  }

  /* Animated gradient background */
  .background-gradient {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(244, 63, 94, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 100% 100%, rgba(244, 63, 94, 0.1) 0%, transparent 40%),
      linear-gradient(180deg, var(--neutral-950) 0%, var(--neutral-900) 100%);
    pointer-events: none;
  }

  /* Dot pattern overlay */
  .background-pattern {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 1px 1px, var(--neutral-800) 1px, transparent 0);
    background-size: 32px 32px;
    opacity: 0.5;
    pointer-events: none;
  }

  /* Soft glow effect */
  .glow-effect {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(244, 63, 94, 0.08) 0%, transparent 60%);
    pointer-events: none;
    animation: pulse 8s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }

  .content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 400px;
    width: 100%;
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Logo Section */
  .logo-section {
    margin-bottom: 28px;
  }

  .logo-wrapper {
    padding: 4px;
    border-radius: 20px;
    background: linear-gradient(135deg, var(--rose-500) 0%, var(--rose-600) 100%);
    box-shadow: 0 8px 32px rgba(244, 63, 94, 0.25);
  }

  .logo {
    width: 88px;
    height: 88px;
    object-fit: contain;
    border-radius: 16px;
    background: var(--neutral-900);
  }

  .icon-container {
    width: 88px;
    height: 88px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--rose-500) 0%, var(--rose-600) 100%);
    box-shadow: 0 8px 32px rgba(244, 63, 94, 0.3);
    color: white;
  }

  .icon {
    width: 40px;
    height: 40px;
  }

  /* Restaurant Name */
  .restaurant-name {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 24px;
    color: var(--neutral-400);
    letter-spacing: 0.025em;
  }

  /* Message Section */
  .message-section {
    margin-bottom: 36px;
  }

  .title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 12px;
    line-height: 1.2;
    color: var(--neutral-50);
    letter-spacing: -0.025em;
  }

  .subtitle {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--neutral-400);
    max-width: 320px;
  }

  /* Contact Section */
  .contact-section {
    padding: 20px 24px;
    border-radius: 16px;
    margin-bottom: 36px;
    width: 100%;
    background: rgba(244, 63, 94, 0.05);
    border: 1px solid rgba(244, 63, 94, 0.15);
    backdrop-filter: blur(8px);
  }

  .contact-label {
    font-size: 0.8125rem;
    color: var(--neutral-500);
    margin-bottom: 14px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .contact-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-size: 0.9375rem;
    text-decoration: none;
    padding: 10px 0;
    color: var(--rose-400);
    transition: color 0.2s ease;
    font-weight: 500;
  }

  .contact-link:hover {
    color: var(--rose-300);
  }

  .contact-icon {
    width: 18px;
    height: 18px;
  }

  /* Footer */
  .footer {
    margin-top: auto;
  }

  .powered-by {
    font-size: 0.75rem;
    color: var(--neutral-600);
  }

  .powered-by a {
    color: var(--rose-500);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
  }

  .powered-by a:hover {
    color: var(--rose-400);
  }

  /* Responsive adjustments */
  @media (max-width: 480px) {
    .unavailable-container {
      padding: 20px;
    }

    .title {
      font-size: 1.5rem;
    }

    .logo-wrapper,
    .icon-container {
      width: 80px;
      height: 80px;
    }

    .logo {
      width: 72px;
      height: 72px;
    }

    .icon {
      width: 36px;
      height: 36px;
    }
  }
</style>
